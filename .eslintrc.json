{
  "extends": "eslint:recommended",
  "root": true,
  "env": {
    "es2022": true,
    "browser": true,
    "greasemonkey": true
  },
  "globals": {
    "JSZip": "readonly"
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["error", 2, {"SwitchCase": 1}],
    "no-console": "error",
    "no-empty": ["error", {"allowEmptyCatch": true}],
    "no-unused-vars": ["error", {"argsIgnorePattern": "^_"}],
    "quotes": ["error", "double", {"avoidEscape": true}],
    "semi": ["error", "always"]
  }
}
